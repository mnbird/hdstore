<p id="notice"><%= notice %></p>
<h1>Your Catalog</h1>
<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <h3><%= product.title %></h3>
        <p>Director: <%= sanitize(product.director) %></p>
        <p>Stars: <%= sanitize(product.stars) %></p>
        <%= sanitize(product.description) %>
        <p>Country: <%= sanitize(product.country) %></p>
        <p><%= sanitize(product.year) %></p>
        <div class="price_line">
          <span class="price"><%= number_to_currency(product.price) %></span>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>